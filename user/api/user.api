syntax = "v1"

info (
	title: "用户服务api"
	desc:  "用户服务api内容"
)

type (
	UserReq {
		Id uint64 `json:"id"`
	}
	UserResp {
		Id    uint64 `json:"id"`
		Name  string `json:"name"`
		Phone string `json:"phone"`
	}
)

// 定义 user api 服务描述
service User {
	@handler user
	get /user (UserReq) returns (UserResp)
}

@server (
	middleware: LoginVerification
)
service User {
	@handler userInfo
	get /userInfo (UserReq) returns (UserResp)
}

